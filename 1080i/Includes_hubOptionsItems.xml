            <radiowidth/>
            <radioheight/>
            <onclick>sendclick(videos,14)</onclick>
        </control>
        <control type="radiobutton" id="11">
            <description>Unlock Shares</description>
            <label>20336</label>
            <width>6-col</width>
            <texturefocus colordiffuse="highlight">colors/white.png</texturefocus>
