                        <label>705</label>
                        <label2>$INFO[Network.IPAddress][CR]$INFO[Network.MacAddress]</label2>
                        <property name="itemIcon">&gt;</property>
                        <thumb></thumb>
                        
                    </item>
                    <item id="3">
